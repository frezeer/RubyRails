<div class="large-container center-block">
<h2>Cambia tu Contrase単a</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "Nueva Contrase単a" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> minimo de caracteres)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Repite tu contrase単a" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions margin-top">
    <%= f.submit "Cambia tu Contrase単a", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>